{% block javascripts %}
    <script>
        const CONTEXT = {{ context |json_encode|raw }};
        // Elements DOM
        const form = document.getElementById('chat-form');
        const input = document.getElementById('user-input');
        const messagesContainer = document.getElementById('messages-container');
        const sendButton = document.getElementById('send-button');
        const sendText = document.getElementById('send-text');
        const sendLoading = document.getElementById('send-loading');

        // Fonction pour formater l'heure
        function getTimeString() {
            const now = new Date();
            return now.toLocaleTimeString('fr-FR', { hour: '2-digit', minute: '2-digit' });
        }

        // Fonction pour ajouter un message utilisateur
        function addUserMessage(text) {
            const messageDiv = document.createElement('div');
            messageDiv.className = 'flex items-start space-x-3 flex-row-reverse space-x-reverse message-animation';

            messageDiv.innerHTML = `
            <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center shadow-lg">
                    <span class="text-white font-bold text-sm">ME</span>
                </div>
            </div>
            <div class="flex-1 max-w-xl">
                <div class="bg-gradient-to-br from-green-500 to-emerald-600 text-white rounded-2xl rounded-tr-none p-4 shadow-md">
                    <p class="leading-relaxed">${escapeHtml(text)}</p>
                </div>
                <div class="text-xs text-gray-500 mt-1 mr-1 text-right">${getTimeString()}</div>
            </div>
        `;

            messagesContainer.appendChild(messageDiv);
            scrollToBottom();
        }

        // Fonction pour ajouter un message AI
        function addAIMessage(text) {
            const messageDiv = document.createElement('div');
            messageDiv.className = 'flex items-start space-x-3 message-animation';

            messageDiv.innerHTML = `
            <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                    <span class="text-white font-bold text-sm">AI</span>
                </div>
            </div>
            <div class="flex-1 max-w-xl">
                <div class="bg-white rounded-2xl rounded-tl-none p-4 shadow-md">
                    <p class="text-gray-800 leading-relaxed whitespace-pre-line">${escapeHtml(text)}</p>
                </div>
                <div class="text-xs text-gray-500 mt-1 ml-1">${getTimeString()}</div>
            </div>
        `;

            messagesContainer.appendChild(messageDiv);
            scrollToBottom();
        }

        // Fonction pour afficher le loader (typing indicator)
        function addLoader() {
            const loaderDiv = document.createElement('div');
            loaderDiv.id = 'typing-loader';
            loaderDiv.className = 'flex items-start space-x-3 message-animation';

            loaderDiv.innerHTML = `
            <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                    <span class="text-white font-bold text-sm">AI</span>
                </div>
            </div>
            <div class="flex-1 max-w-xl">
                <div class="bg-white rounded-2xl rounded-tl-none p-4 shadow-md">
                    <div class="flex space-x-2">
                        <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce"></div>
                        <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
                        <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
                    </div>
                </div>
            </div>
        `;

            messagesContainer.appendChild(loaderDiv);
            scrollToBottom();
        }

        // Fonction pour retirer le loader
        function removeLoader() {
            const loader = document.getElementById('typing-loader');
            if (loader) {
                loader.remove();
            }
        }

        // Fonction pour scroller en bas
        function scrollToBottom() {
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Fonction pour √©chapper HTML (s√©curit√©)
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Fonction pour d√©sactiver/activer le formulaire
        function setFormDisabled(disabled) {
            input.disabled = disabled;
            sendButton.disabled = disabled;
            if (disabled) {
                sendText.classList.add('hidden');
                sendLoading.classList.remove('hidden');
                sendButton.classList.add('opacity-75', 'cursor-not-allowed');
            } else {
                sendText.classList.remove('hidden');
                sendLoading.classList.add('hidden');
                sendButton.classList.remove('opacity-75', 'cursor-not-allowed');
            }
        }

        // Fonction principale pour envoyer un message
        async function sendMessage(message) {
            if (!message.trim()) return;

            // Afficher le message de l'utilisateur
            addUserMessage(message);

            // Vider l'input
            input.value = '';

            // D√©sactiver le formulaire
            setFormDisabled(true);

            // Afficher le loader
            addLoader();

            try {
                // Appel API avec contexte
                const response = await fetch('/api/chat/context', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        message: message,
                        context: CONTEXT
                    })
                });

                const data = await response.json();

                // Retirer le loader
                removeLoader();

                if (data.error) {
                    addAIMessage('‚ùå D√©sol√©, une erreur est survenue : ' + data.error);
                } else {
                    addAIMessage(data.ai_response);
                }

            } catch (error) {
                removeLoader();
                addAIMessage('‚ùå Erreur de connexion. Veuillez r√©essayer dans quelques instants.');
                console.error('Error:', error);
            } finally {
                // R√©activer le formulaire
                setFormDisabled(false);
                input.focus();
            }
        }

        // Event: Soumission du formulaire
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const message = input.value.trim();
            sendMessage(message);
        });

        // Event: Clic sur suggestions rapides
        document.querySelectorAll('.suggestion-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const suggestion = btn.textContent.trim();
                input.value = suggestion;
                sendMessage(suggestion);
            });
        });

        // Event: Enter pour envoyer (sans Shift)
        input.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                form.dispatchEvent(new Event('submit'));
            }
        });

        // Focus automatique sur l'input au chargement
        window.addEventListener('load', () => {
            input.focus();
        });

        // Scroll en bas au chargement
        scrollToBottom();
    </script>
{% endblock %}
